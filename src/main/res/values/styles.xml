<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Large Text Style for headings or important labels -->
    <style name="QuizTextLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for quiz selection buttons (Week 1, Week 2, etc.) -->
    <style name="QuizButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">#D32F2F</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Style for review page answer options (TextView-based, not interactive) -->
    <style name="ReviewOptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

   z

    <!-- Style for radio buttons used in quiz questions -->
    <style name="QuizRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">14dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:buttonTint">#D32F2F</item>
    </style>

</resources>
